<!DOCTYPE html>
<html>
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <h1>Sign Up</h1>

    <form action="/user/signUp" method="POST">

      <% if (errors && errors.length > 0) { %>
        <div class="errors">
          <% errors.forEach((err) => { %>
            <p><%= err.msg %></p>
          <% }) %>
        </div>
      <% } %>

      <div>
        <label for="fname">First Name:</label>
        <input
          type="text"
          id="fname"
          name="fname"
          value="<%= data && data.fname ? data.fname : '' %>"
        >
      </div>

      <div>
        <label for="lname">Last Name:</label>
        <input
          type="text"
          id="lname"
          name="lname"
          value="<%= data && data.lname ? data.lname : '' %>"
        >
      </div>

      <div>
        <label for="email">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          value="<%= data && data.email ? data.email : '' %>"
        >
      </div>

      <div>
        <label for="username">Username:</label>
        <input
          type="text"
          id="username"
          name="username"
          required
          value="<%= data && data.username ? data.username : '' %>"
        >
      </div>

      <div>
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          required
        >
      </div>

      <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          required
        >
      </div>

      <div>
        <label for="signupCode">Secret Signup Code: </label>
        <input type="password" name="signupCode" id="signupCode" required>
      </div>

      <button type="submit">Sign Up</button>
    </form>
  </body>
</html>