<!DOCTYPE html>
<html>
    <%- include('partials/head')  %>
    <body>
        <%- include('partials/header') %>
        <main>
            <h2>Message Board</h2>
            <% if (!currentUser) {%>
                <p><span><a href="/user/logIn">Login</a></span> or <span><a href="/user/signUp">Signup</a></span> to see more info!</p>
            <%}%>
            <div>
                <% messages.forEach((msg) => {%>
                    <div>
                        <p><%= msg.text %></p>
                        <p><%= msg.created_at%></p>
                        <p><%= msg.username %></p>
                    </div>
                <%}) %>
            </div>
        </main>
    </body>
</html>